<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragments.courses_fragment.grades.GradesActivity">

    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintHeight_percent=".04"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_back"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/course_name_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/ic_back"
        app:layout_constraintStart_toEndOf="@id/ic_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ic_back"
        app:layout_constraintHeight_percent=".05"
        app:autoSizeTextType="uniform"
        tools:text="Parallel Programing"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
        <TextView
            android:id="@+id/exam_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintHeight_percent=".1"
            app:layout_constraintBottom_toTopOf="@id/table_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/grades_tv"
            android:text="@string/exams"
            android:textSize="24sp"
            android:layout_marginEnd="20dp"
            android:paddingVertical="15dp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:gravity="center"

            />


        <TextView
            android:id="@+id/grades_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintHeight_percent=".1"
            app:layout_constraintTop_toBottomOf="@id/course_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.55"
            android:paddingVertical="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:textSize="24sp"
            android:text="@string/grades"
            android:textColor="@color/green"
            android:gravity="center"
            android:textStyle="bold"
            />




    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/grades_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:stretchColumns="0,1"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        >


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/quiz1"
                android:layout_margin="1dp"
                android:layout_column="0"
                android:gravity="center"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=" 7/10"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:layout_column="1"
                android:gravity="center"
                />


        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/quiz2"
                android:layout_margin="1dp"
                android:layout_column="0"
                android:gravity="center"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="8/10"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:layout_column="1"
                android:gravity="center"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/midterm_exam"
                android:layout_margin="1dp"
                android:layout_column="0"
                android:gravity="center"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="18/20"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:layout_column="1"
                android:gravity="center"
                />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/practical_exam"
                android:layout_margin="1dp"
                android:layout_column="0"
                android:textStyle="bold"

                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="12/15"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:layout_column="1"
                android:gravity="center"
                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/final_exam"
                android:layout_margin="1dp"
                android:layout_column="0"
                android:textStyle="bold"

                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="85/100"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:layout_column="1"
                android:gravity="center"
                />

        </TableRow>
    </TableLayout>
    <View
        android:layout_width="3dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/grades_tv"
        app:layout_constraintBottom_toBottomOf="@id/table_layout"
        app:layout_constraintStart_toEndOf="@id/grades_tv"
        android:background="@color/green"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/grades_tv"
        android:layout_marginHorizontal="20dp"
        android:background="@color/green"

        />
</androidx.constraintlayout.widget.ConstraintLayout>
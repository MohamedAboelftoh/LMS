<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.fragments.account.AccountFragment"
    android:paddingTop="10dp"
    >

   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/img_profile"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:src="@drawable/splash2"
       app:civ_border_width="2dp"
       app:civ_border_color="@color/colorPrimary"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="5dp"
       android:layout_marginStart="5dp"
       />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@id/img_profile"
        app:layout_constraintStart_toStartOf="@id/img_profile"
        app:layout_constraintEnd_toEndOf="@id/img_profile"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:id="@+id/linear_user_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_profile"
        app:layout_constraintStart_toEndOf="@id/img_profile"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/department"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gpa"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_user_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_profile"
        app:layout_constraintTop_toBottomOf="@id/linear_user_information"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CS"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.5"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_profile"
        app:layout_constraintStart_toStartOf="@id/img_profile"
        android:text="Mohamed Shaban"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toStartOf="@id/user_name"
        android:text="id / "
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/user_id_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_id"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        android:text="123456"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_show_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/show_your_card"
        android:backgroundTint="#D9D9D9"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginHorizontal="40dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@id/user_id_number"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/user_id_number"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:textSize="17sp"
            android:textColor="@color/black"
            app:backgroundTint="@color/transparent"
            app:drawableStartCompat="@drawable/ic_password"
            app:drawableEndCompat="@drawable/ic_path_arrow"
            android:drawablePadding="15dp"
            android:layout_marginHorizontal="50dp"
            />
        <TextView
            android:id="@+id/change_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_phone"
            android:textSize="17sp"
            android:textColor="@color/black"
            app:backgroundTint="@color/transparent"
            app:drawableStartCompat="@drawable/ic_phone"
            app:drawableEndCompat="@drawable/ic_path_arrow"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="15dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textSize="17sp"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/btn_logout_background"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
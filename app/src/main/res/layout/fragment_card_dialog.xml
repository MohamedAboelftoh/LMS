<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="5dp"
    tools:context=".ui.home.fragments.account.CardDialogFragment">

    <TextView
        android:id="@+id/university_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/fcai_sadat_city_university"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/img_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@id/linear_user_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/linear_user_information"
        android:elevation="0dp"
        app:cardCornerRadius="50dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/white"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar_1"
            />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <LinearLayout
        android:id="@+id/linear_user_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/university_name"        app:layout_constraintStart_toEndOf="@id/img_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        app:layout_goneMarginStart="10dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_name"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_level"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/academic_id"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Department :"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:textStyle="bold"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_user_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/linear_user_information"
        app:layout_constraintStart_toEndOf="@id/linear_user_information"
        app:layout_constraintBottom_toBottomOf="@id/linear_user_information"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mohamed aboelftoh"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"

            />
        <TextView
            android:id="@+id/academic_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 123445"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="5dp"

            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CS"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="5dp"

            android:textStyle="bold"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
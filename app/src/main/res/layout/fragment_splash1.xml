<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.splashes.SplashFragment1">

    <ImageView
        android:id="@+id/img_splash1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintWidth_percent=".7"
        android:src="@drawable/img_splash1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv1"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_splash1"
        app:layout_constraintStart_toStartOf="@id/tv2"
        app:layout_constraintEnd_toEndOf="@id/tv2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        android:text="@string/access_materials_easy"
        android:textSize="25sp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/courses_tasks_quizzes_n_and_calendar"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/secondaryTextColor"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
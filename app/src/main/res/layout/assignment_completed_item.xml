<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/course_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeWidth="2dp"
    app:strokeColor="@color/colorPrimary"
    android:layout_margin="15dp"
    app:cardCornerRadius="8dp"
    android:elevation="5dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        >
        <ImageView
            android:id="@+id/assignment_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".8"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_assignment"
            />
        <TextView
            android:id="@+id/course_name_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintHeight_percent=".45"
            app:layout_constraintTop_toTopOf="@id/assignment_image"
            app:layout_constraintStart_toEndOf="@id/assignment_image"
            app:layout_constraintEnd_toStartOf="@id/img_right"
            android:text="Parallel Programing"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/deadline"
            app:layout_constraintStart_toEndOf="@id/assignment_image"
            app:layout_constraintEnd_toStartOf="@id/deadline"
            app:layout_constraintBottom_toBottomOf="@id/deadline"
            android:text="complete"
            app:layout_constraintWidth_percent=".2"
            app:layout_constraintHeight_percent=".4"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/deadline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:autoSizeTextType="uniform"
            app:layout_constraintHeight_percent=".4"
            app:layout_constraintTop_toBottomOf="@id/course_name_tv"
            app:layout_constraintStart_toEndOf="@id/tv_complete"
            app:layout_constraintEnd_toStartOf="@id/img_right"
            android:text="20/2/2022"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            />
        <ImageView
            android:id="@+id/img_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/img_completed"
            android:layout_marginEnd="8dp"
            app:layout_constraintWidth_percent=".14"
            android:adjustViewBounds="true"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
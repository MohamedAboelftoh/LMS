<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragments.courses_fragment.quizzes.FinishActivity">
    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintWidth_percent=".06"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/tv_finished"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".1"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/submit"
        app:autoSizeTextType="uniform"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/answer_successfully"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintHeight_percent=".04"
        app:layout_constraintTop_toBottomOf="@id/tv_finished"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_finish"
        android:text="@string/are_you_sure_to_submit_your_answers"
        android:gravity="center"
        android:textColor="@color/secondaryTextColor"
        />
    <ImageView
        android:id="@+id/img_finish"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/answer_successfully"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_finished"
        app:layout_constraintHeight_percent=".35"
        android:adjustViewBounds="true"
        android:src="@drawable/img_finished"
        />
    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_finish"
        app:layout_constraintBottom_toBottomOf="@id/img_finish"
        app:layout_constraintStart_toStartOf="@id/img_finish"
        app:layout_constraintEnd_toEndOf="@id/img_finish"
        tools:text="3/4"
        android:layout_marginEnd="30dp"
        android:textColor="@color/black"
        android:textSize="30sp"
       android:textStyle="bold"
        android:layout_marginBottom="10dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_finished"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_finish"
        android:text="@string/submit"
        app:autoSizeTextType="uniform"
        app:layout_constraintHeight_percent=".08"
        app:cornerRadius="8dp"
        android:layout_marginHorizontal="15dp"
        />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/img_finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answer_successfully"
        android:visibility="invisible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
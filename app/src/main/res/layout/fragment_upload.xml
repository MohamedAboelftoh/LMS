<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.student.fragments.courses_fragment.assignments.UploadFragment">
    <TextView
        android:id="@+id/tv_upload_assignment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.98"
        app:layout_constraintHeight_percent="0.075"
        app:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="@string/upload_assignment"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/img_upload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_upload_assignment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_upload"
        app:layout_constraintHeight_percent=".57"
        app:layout_constraintWidth_percent="0.7"
        android:adjustViewBounds="true"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_upload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/img_upload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.14"
        app:layout_constraintWidth_percent="0.9"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusTopStart="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        android:layout_marginTop="10dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/file_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="assignment.text"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_attach"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/et_upload"
        app:layout_constraintEnd_toEndOf="@id/et_upload"
        app:layout_constraintBottom_toBottomOf="@id/et_upload"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.12"
        app:autoSizeTextType="uniform"
        android:textColor="@color/white"
        android:text="@string/attach"
        app:cornerRadius="5dp"
        android:layout_marginEnd="8dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/et_upload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.125"
        app:autoSizeTextType="uniform"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="@string/submit"
        app:cornerRadius="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_task_data"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHeight_percent="0.5"
    android:background="@drawable/constraint_border_bg"
    android:layout_margin="15dp"
    >


        <TextView
            android:id="@+id/assign_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view"
            app:layout_constraintEnd_toStartOf="@id/ic_edit"
            app:layout_constraintHeight_percent=".1"
            app:autoSizeTextType="uniform"
            android:text="Quiz 1"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />


    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/ic_see"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="3dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <ImageView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_see"
        android:layout_margin="5dp"
       />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/ic_delete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="3dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintEnd_toStartOf="@id/ic_see"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:src="@drawable/ic_delete"
            />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/ic_edit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="3dp"
        app:cardCornerRadius="60dp"
        app:layout_constraintEnd_toStartOf="@id/ic_delete"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_name"
            android:layout_margin="5dp"
            />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/ic_see"
            android:layout_marginHorizontal="10dp"
            android:background="@color/white2"
            android:layout_marginTop="5dp"
            />
    <ImageView
        android:id="@+id/ic_points"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:src="@drawable/ic_graph"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"

        />
    <TextView
        android:id="@+id/grades"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/ic_points"
        app:layout_constraintBottom_toBottomOf="@id/ic_points"
        app:layout_constraintStart_toEndOf="@id/ic_points"
        app:layout_constraintEnd_toStartOf="@id/btn_available"
        app:layout_constraintHeight_percent="0.1"
        android:paddingStart="10dp"

        android:layout_marginEnd="5dp"
        android:text="5 Grade"
        app:autoSizeTextType="uniform"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/ic_time"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_points"
        android:src="@drawable/ic_time_2"
        android:layout_margin="5dp"

        />
    <TextView
        android:id="@+id/progress_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintEnd_toStartOf="@id/progressBar"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.1"
        android:layout_marginStart="20dp"
        app:autoSizeTextType="uniform"
        android:text="50"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/progress_end_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toEndOf="@id/progressBar"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintWidth_percent="0.1"
        android:layout_marginHorizontal="5dp"
        app:autoSizeTextType="uniform"
        android:text="100"
        android:textStyle="bold"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ic_time_2"
    app:layout_constraintStart_toEndOf="@id/progress_start_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.07"
        android:layout_marginStart="5dp"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:progress="50"
        android:progressTint="@color/green"
        android:scaleY="3.5"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/ic_time"
        app:layout_constraintBottom_toBottomOf="@id/ic_time"
        app:layout_constraintStart_toEndOf="@id/ic_time"
        app:layout_constraintEnd_toStartOf="@id/btn_available"
        app:layout_constraintHeight_percent="0.1"
        android:layout_marginEnd="5dp"
        android:text="8:00  To  8:30"
        app:autoSizeTextType="uniform"
        android:textStyle="bold"
        android:paddingStart="10dp"

        />

    <ImageView
        android:id="@+id/ic_time_2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_time"
        android:src="@drawable/ic_time_2"
        android:layout_margin="5dp"

        />
    <TextView
        android:id="@+id/end_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/ic_time_2"
        app:layout_constraintBottom_toBottomOf="@id/ic_time_2"
        app:layout_constraintStart_toEndOf="@id/ic_time_2"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintEnd_toStartOf="@id/btn_available"
        android:textSize="12sp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:text="end date"
        android:paddingStart="10dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_available"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        android:layout_marginBottom="20dp"
        android:textSize="12dp"
        android:layout_marginEnd="8dp"
        app:cornerRadius="10dp"
        android:text="Available Now"
        android:textStyle="bold"
        android:backgroundTint="@color/green"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
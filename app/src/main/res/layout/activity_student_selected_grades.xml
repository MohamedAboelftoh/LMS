<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.doctor.fragments.courses.grades.StuSelectedGradesActivity">


    <ImageView
        android:id="@+id/img_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".06"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/student_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".043"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/img_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_back"
        app:layout_constraintBottom_toBottomOf="@id/img_back"
        android:text="Mohamed Ahmed "
        android:textColor="@color/black"
        app:autoSizeTextType="uniform"
        android:textStyle="bold"
        android:paddingStart="10dp"
        />

    <TextView
        android:id="@+id/mark_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_name"
        app:layout_constraintStart_toEndOf="@id/tasks_tv"
        android:text="@string/mark"
        app:layout_constraintHeight_percent=".09"
        android:layout_marginEnd="10dp"
        app:layout_constraintWidth_percent="0.25"
        android:paddingVertical="15dp"
        android:layout_marginTop="50dp"
        app:autoSizeTextType="uniform"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/tasks_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/student_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mark_tv"
        app:layout_constraintHeight_percent=".09"
        app:autoSizeTextType="uniform"
        android:paddingVertical="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:text="Tasks"
        android:textColor="@color/green"
        android:gravity="center"
        android:textStyle="bold"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tasks_grades_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tasks_tv"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/grades_item"

        />
    <View
        android:layout_width="3dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tasks_tv"
        app:layout_constraintBottom_toBottomOf="@id/tasks_grades_recycler"
        app:layout_constraintStart_toEndOf="@id/tasks_tv"
        android:background="@color/green"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/tasks_tv"
        android:layout_marginHorizontal="20dp"
        android:background="@color/green"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
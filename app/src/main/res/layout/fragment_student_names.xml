<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:paddingVertical="20dp"
    tools:context=".ui.doctor.fragments.courses.assignment.StudentNamesFragment">
<TextView
    android:id="@+id/tv_student_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:autoSizeTextType="uniform"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:text="Student Name"
    android:textColor="#009788"
    android:textStyle="bold"
    app:drawableStartCompat="@drawable/ic_user"
    android:drawablePadding="10dp"
    android:drawableTint="#009788"
    />
<View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    app:layout_constraintTop_toBottomOf="@id/tv_student_name"
    android:layout_marginTop="20dp"
    android:background="#009788"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/students_recycler"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_student_name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.fragments.courses_fragment.CoursesFragment"
    android:id="@+id/courses_fragment"
    >
    <TextView
        android:id="@+id/hello_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Hello !"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15sp"
        android:textColor="@color/black"

        />
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hello_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"
        android:text="Wishing you \n continued success "
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginStart="15sp"
        android:layout_marginVertical="8dp"
        android:textColor="@color/white2"

        />
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_2"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Enrolled 5 Courses"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15sp"
        android:textColor="@color/colorPrimary"

        />
    <ImageView
        android:id="@+id/image_learning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        android:adjustViewBounds="true"
        android:src="@drawable/learning_img"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"


        />


    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_3"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Courses"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15sp"
        android:textColor="@color/black"

        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/tv_4"
        android:background="@color/white2"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/courses_rec_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/course_item"
        android:layout_marginTop="10dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
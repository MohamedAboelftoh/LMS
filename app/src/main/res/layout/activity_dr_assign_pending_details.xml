<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.doctor.fragments.courses.assignment.DrAssignPendingDetailsActivity">
    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintHeight_percent=".04"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_back"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/course_name_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/ic_back"
        app:layout_constraintStart_toEndOf="@id/ic_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ic_back"
        app:layout_constraintHeight_percent=".05"
        app:autoSizeTextType="uniform"
        android:text="Parallel Programing"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/assignment_name_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/course_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintWidth_percent="0.9"
        android:text="Assign name"
        android:gravity="center"
        app:autoSizeTextType="uniform"
        android:textStyle="bold"
        android:paddingVertical="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_et"
        android:elevation="15dp"
        />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_send_by"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/assignment_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/constraint_task_data"
            app:layout_constraintHeight_percent="0.085"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginEnd="30dp"
            android:background="@drawable/card_assign_details_bg"
            >
            <TextView
                android:id="@+id/send_by_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent=".4"
                app:layout_constraintWidth_percent="0.3"
                app:autoSizeTextType="uniform"
                android:text="Send by"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/number"
                android:layout_width="35dp"
                android:layout_height="35dp"
               app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20dp"
                android:text="+7"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/background_et"
                android:elevation="15dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_task_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/constraint_send_by"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.95"
        android:background="@drawable/constraint_border_bg"
        >
        <TextView
            android:id="@+id/task_data_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent=".05"
            app:layout_constraintWidth_percent="0.4"
            app:autoSizeTextType="uniform"
            android:text="Task data"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/task_data_tv"
            android:layout_marginHorizontal="5dp"
            android:background="@color/white2"
            android:layout_marginTop="10dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_task_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/constraint_task_grade"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintWidth_percent="0.92"
            android:layout_marginTop="10dp"
            android:background="@drawable/constraint_border_bg"
            >
            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_name"
                app:layout_constraintWidth_percent=".08"
                app:layout_constraintHeight_percent="0.6"
                android:scaleType="centerCrop"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:id="@+id/task_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/name_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent=".5"
                app:layout_constraintWidth_percent="0.3"
                app:autoSizeTextType="uniform"
                android:text="Task name"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/task_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".4"
                app:layout_constraintWidth_percent="0.55"
                android:maxLines="2"
                app:autoSizeTextType="uniform"
                android:text="name"
                android:gravity="end"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_task_grade"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/constraint_task_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/constraint_task_deadline"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintWidth_percent="0.92"
            android:background="@drawable/constraint_border_bg"
            >
            <ImageView
                android:id="@+id/grade_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_graph"
                app:layout_constraintWidth_percent=".07"
                app:layout_constraintHeight_percent="0.5"
                android:layout_marginStart="8dp"
                />
            <TextView
                android:id="@+id/task_grade"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/grade_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent=".5"
                app:layout_constraintWidth_percent="0.3"
                app:autoSizeTextType="uniform"
                android:text=" Task grade"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/grade_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/task_grade"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".4"
                app:layout_constraintWidth_percent="0.55"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                android:text="5 points"
                android:gravity="end"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_task_deadline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/constraint_task_grade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_edit"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintWidth_percent="0.92"
            android:layout_marginBottom="10dp"
            android:background="@drawable/constraint_border_bg"
            >
            <ImageView
                android:id="@+id/deadline_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_time_2"
                app:layout_constraintWidth_percent=".07"
                app:layout_constraintHeight_percent="0.5"
                android:layout_marginStart="5dp"
                />
            <TextView
                android:id="@+id/task_deadline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/deadline_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent=".5"
                app:layout_constraintWidth_percent="0.28"
                app:autoSizeTextType="uniform"
                android:text="Deadline"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/deadline_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@id/task_deadline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".4"
                app:layout_constraintWidth_percent="0.57"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                android:text="2024-03-23T22:31:30.911Z"
                android:gravity="end"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.14"
            app:layout_constraintWidth_percent="0.95"
            app:autoSizeTextType="uniform"
            android:layout_marginBottom="5dp"
            android:text="Edit Task Data"
            android:backgroundTint="@color/green"
            app:cornerRadius="10dp"
            android:paddingVertical="10dp"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/btn_back"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constraint_task_data"
        app:layout_constraintStart_toStartOf="parent"
        android:text="back"
        />
    <Button
        android:id="@+id/btn_go"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constraint_task_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="go"
        />

</androidx.constraintlayout.widget.ConstraintLayout>